<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage Title="Menu Principal" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HackatonSeducAluno.SideMenu">
	<MasterDetailPage.Master>
		<ContentPage>
			<Grid>
				<Grid.RowDefinitions>
					<!--Dados do usuário-->
					<RowDefinition Height="Auto"/>
					<!--Botão de Aulas -->
					<RowDefinition Height="Auto"/>
					<!--Linha vazia-->
					<RowDefinition Height="*"/>
					<!--Botão de sair-->
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<StackLayout Grid.Row="0" Orientation="Vertical" >
					<Label Text="Nome do Aluno"/>
					<Label Text="Colégio do Aluno"/>
					<Label Text="Série do Aluno"/>
				</StackLayout>
				<Button Grid.Row="1" Text="Aulas do dia"/>
				<Button Grid.Row="3" Text="Sair"/>
			</Grid>
		</ContentPage>
	</MasterDetailPage.Master>
</MasterDetailPage>
